{
  "coc.preferences.formatOnSaveFiletypes": ["css", "js", "jsx", "ts", "tsx", "markdown", "typescriptreact", "scss", "rust", "typescript"],
  "diagnostic.enable": false,
  "languageserver": {
   "go": {
      "disableDiagnostics": true,
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  }
}
