{
  "$schema": "https://opencode.ai/config.json",
  "theme": "one-dark",
  "model": "github-copilot/claude-opus-4.5",
  "plugin": ["oh-my-opencode"],
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    }
  }
}
